<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Blog App</title>
</head>
<body>

    <header>
        <h1>My Blog</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/new">New Post</a>
        </nav>
    </header>

    <main>
        <h2>All Posts</h2>
        <ul>
            <% posts.forEach(post => { %>
                <li>
                    <h3><%= post.title %></h3>
                    <p><%= post.content %></p>
                    <a href="/edit/<%= post.id %>">Edit</a>
                    <a href="/delete/<%= post.id %>">Delete</a>
                </li>
            <% }); %>
        </ul>
    </main>

</body>
</html>
